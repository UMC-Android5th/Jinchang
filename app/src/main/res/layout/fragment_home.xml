<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id ="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_paly_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_first_img_iv"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/home_pannel_album_first_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_second_img_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_first_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"

            android:text="In My Bad"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_first_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_first_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_first_img_iv" />

        <TextView
            android:id="@+id/home_pannel_album_first_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_first_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_first_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_first_img_iv"/>
        <ImageView
            android:id="@+id/home_pannel_album_second_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_second_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bad"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_second_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_second_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_second_img_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_second_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_second_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_second_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_second_img_iv"/>
        <TextView
            android:id="@+id/home_pannel_today_music_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="오늘 발매 음악"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/home_pannel_album_second_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv" />
        <ImageView
            android:id="@+id/home_pannel_more_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_text"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_music_text"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music_text"/>
        <TextView
            android:id="@+id/home_pannel_today_music_overall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_btn_nugu_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_music_text"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music_text"/>
        <TextView
            android:id="@+id/home_pannel_today_music_domestic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_music_text"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music_text"/>
        <TextView
            android:id="@+id/home_pannel_today_music_overseas_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_music_text"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music_text"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_pannel_music_list_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/music_list_item"
            app:layout_constraintLeft_toLeftOf="@+id/home_pannel_today_music_text"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_today_music_text"/>
        <ImageView
            android:id="@+id/home_pannel_viewpager_exp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_home_viewpager_exp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_music_list_rv"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/home_pannel_potcast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/home_pannel_album_second_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpager_exp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_pannel_potcast_list_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/potcast_list_item"
            app:layout_constraintLeft_toLeftOf="@+id/home_pannel_today_music_text"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_potcast_text"/>
        <TextView
            android:id="@+id/home_pannel_video_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비디오 컬랙션"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/home_pannel_album_second_img_iv"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_potcast_list_rv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_pannel_video_list_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/video_list_item"
            app:layout_constraintLeft_toLeftOf="@+id/home_pannel_today_music_text"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_video_text"/>
        <ImageView
            android:id="@+id/home_pannel_banner"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:src="@drawable/discovery_banner_aos"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_video_list_rv"/>
        <ImageView
            android:id="@+id/home_pannel_viewpager_exp2"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="150dp"
            android:src="@drawable/img_home_viewpager_exp2"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_banner"/>
        <LinearLayout
            android:id="@+id/home_pannel_ic_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_viewpager_exp2">
            <ImageView
                android:id="@+id/home_pannel_facebook_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_main_facebook"/>
            <ImageView
                android:id="@+id/home_pannel_instagram_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_main_instagram"/>
            <ImageView
                android:id="@+id/home_pannel_youtube_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_main_youtube"/>
            <ImageView
                android:id="@+id/home_pannel_twitter_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_main_twitter"/>
        </LinearLayout>
        <TextView
            android:id="@+id/home_pannel_last_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="(주)드림어스컴퍼니 사업자 정보"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_pannel_ic_list"/>
        <ImageView
            android:id="@+id/home_pannel_last_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/home_pannel_last_text"
            app:layout_constraintTop_toTopOf="@id/home_pannel_last_text"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_last_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>